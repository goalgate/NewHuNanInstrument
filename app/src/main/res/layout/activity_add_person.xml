<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/body_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/y360"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/zt_box_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/y24"
        android:paddingRight="@dimen/y24"
        android:layout_marginTop="@dimen/x7"
        android:layout_marginBottom="@dimen/x7">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x33"
            android:paddingLeft="@dimen/y3"
            android:paddingRight="@dimen/y3"
            android:paddingTop="@dimen/x3"
            android:paddingBottom="@dimen/x3"
            android:text="增加人员"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/x7"
            android:textSize="12pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x7"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_idcard"
                android:layout_width="@dimen/y180"
                android:layout_height="wrap_content"
                android:background="@drawable/zwh_bg"
                android:hint="请填写身份证信息"
                android:gravity="center"
                android:paddingTop="@dimen/x7"
                android:paddingBottom="@dimen/x7"
                android:layout_marginRight="@dimen/y6"/>

            <Button
                android:id="@+id/btn_query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/tj_bg"
                android:text="校验信息"
                android:textColor="@color/white"
                android:textSize="24sp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="@dimen/y120"
                android:layout_height="@dimen/x120"
                android:layout_marginLeft="@dimen/y12"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80">

                    <ImageView
                        android:id="@+id/iv_finger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/zw_icon" />

                    <ImageView
                        android:id="@+id/iv_finger_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/xj_bg" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/et_finger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_finger_view"
                    android:layout_marginTop="@dimen/x13"
                    android:background="@drawable/zwh_bg"
                    android:enabled="false"
                    android:paddingLeft="@dimen/y5"
                    android:paddingTop="@dimen/x7"
                    android:paddingBottom="@dimen/x7"
                    android:text="先验证人员身份获得指纹编号"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/y120"
                android:layout_height="@dimen/x120">

            <ImageView
                android:id="@+id/iv_userPic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user_icon"
              />
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x7"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginRight="@dimen/y3"
                android:layout_weight="1"
                android:background="@drawable/tj_bg"
                android:text="提  交"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/y3"
                android:layout_marginTop="@dimen/x10"
                android:layout_weight="1"
                android:background="@drawable/tj_bg"
                android:text="取  消"
                android:textColor="@color/white"
                android:textSize="24sp" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>